extends ../../layouts/product-item

block variables
    - const title = "Рододендрон якушиманский 'Percy Wiseman'";
    - const banner = "rhododendron"

block content
    - const productTitle = "Рододендрон якушиманский 'Percy Wiseman'";
    - const imgPath = "../img/rhododendron/";
    - const addInfo = "Саженцы двухлетние, трехлетние, закрытая корневая система, выращено в открытом грунте, обработаны. К продукции прилагается наша аннотация по уходу (обработка, посадка)."
    -
        const postImgs = [
            {
                'img': '../img/product/post-1',
                'alt': 'M&M'
            },
            {
                'img': '../img/product/post-2',
                'alt': 'Белпочта'
            },
            {
                'img': '../img/product/post-3',
                'alt': 'Европочта'
            }
        ]
    -
        const productImgs = [
            {
                'imgPath': 'percy-wiseman/percy-wiseman',
                'alt': "Рододендрон 'Percy Wiseman'"
            },
        ]

    section.product
        .container
            .product__wrap
                .product__inner
                    .product__row
                        .product__gallery
                            .product__gallery-main
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '.jpg' alt=productImg.alt)

                            .product__gallery-nav
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '-sm.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '-sm.jpg' alt=productImg.alt)

                        .product__info
                            h2.heading.page__heading= productTitle
                            .product__info-wrap
                                .product__info-descr
                                    p
                                        | Размеры взрослого растения: вечнозелёный кустарник, высота взрослого растения до 1 м и до 1,5 м в ширину.
                                    p
                                        | Крона: куполовидная, плотная.
                                    p
                                        | Форма и окраска листьев: листья узкие, толстые, кожистые, глянцевые, блестящие длиной 10-15 см. Цвет листвы сверху темно-зеленый, снизу коричневый с небольшим опушением.
                                    p
                                        | Время цветения: цветки имеют диаметр до 7 см, собраны в соцветия по 10-15 штук. В начале цветения лепестки светло-жёлтые по мере распускания становятся лососево-розовыми. Цвести начинает в мае и заканчивает в июне.
                                    p
                                        | Особенности роста: ежегодный прирост за год около 10 см.
                                    p
                                        | Почвы: воздухопроницаемый грунт от очень кислых до подкисленных; чувствителен к засухе.
                                    p
                                        | Отношение к свету: полутень.
                                    p
                                        | Морозостойкость: до -22°C. Зимой растение требует каркасного укрытия для защиты от морозов.
                                    p
                                        | Применение в ландшафте: одиночные и групповые посадки, рокарии, вересковый сад.

                .add-info
                    h2.heading.add-info__heading Дополнительная информация
                    .add-info__text
                        p.add-info__descr= addInfo

                .info-logo__wrap
                    ul.info-logo__list
                        each post in postImgs
                            li.info-logo__item
                                picture
                                    source(srcset=post.img+'.webp' type="image/webp")
                                    img(src=post.img+'.png' alt=post.alt)


block scripts
    script(src="../js/main.js")
    script(src="../js/vendor.js")