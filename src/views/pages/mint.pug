extends ../layouts/default

block variables
    - const title = "Мята | Питомник растительных культур семьи Пухальских";

block content
    - const productTitle = "Мята";
    - const imgPath = "./img/mint/";
    -
        const postImgs = [
            {
                'img': './img/product/post-1',
                'alt': 'M&M'
            },
            {
                'img': './img/product/post-2',
                'alt': 'Белпочта'
            },
            {
                'img': './img/product/post-3',
                'alt': 'Европочта'
            }
        ]
    -
        const productImgs = [
            {
                'imgPath': 'mint',
                'alt': "Мята"
            },
        ]

    include ../../blocks/components/banner/banner
    +banner("mint")

    section.product
        .container
            .product__wrap
                .product__inner
                    .product__row
                        .product__gallery
                            .product__gallery-main
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '.jpg' alt=productImg.alt)

                            .product__gallery-nav
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '-sm.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '-sm.jpg' alt=productImg.alt)

                        .product__info
                            h2.heading.page__heading= productTitle
                            .product__info-wrap
                                .product__info-descr
                                    p
                                        | Мята — многолетнее травянистое растение. Мята обычно вырастает до 30 - 100 сантиметров.
                                        | Не требует практически ухода, любит воду (раз в месяц).
                                        | Рпрежде чем сажать мяту нужно позаботиться об ограждениях для нее, потому что ее корневища хорошо разрастается. Также при выборе места стоит сделать акцент на более теневое место.
                                        | Мята полезное растение Используется не только в лекарственных целях, но и в различных напитках. Чай с мятой не только бодрит, но и помогает при простуде, но и других различных болезнях. С мятой можно делать варенье, ликер, зубную пасту, а так же лед из настоя мяты, который можете добавлять в различные лимонады, алкогольные напитки и использовать при умывании (мята тонизирует, освежает кожу и убирает излишнюю жирность).

                .info-logo__wrap
                    ul.info-logo__list
                        each post in postImgs
                            li.info-logo__item
                                picture
                                    source(srcset=post.img+'.webp' type="image/webp")
                                    img(src=post.img+'.png' alt=post.alt)


block scripts
    script(src="./js/main.js")
    script(src="./js/vendor.js")