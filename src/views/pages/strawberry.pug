extends ../layouts/default

block variables
    - const title = "Клубника | Питомник растительных культур семьи Пухальских";

block content

    - let catalogTitle = 'Клубника';
    -
        let catalogItems = [
            {
                'link': './strawberry/alba.html',
                'imgSrc': 'strawberry/alba/alba-md',
                'name': "Альба"
            },
            {
                'link': './strawberry/albion.html',
                'imgSrc': 'strawberry/albion/albion-md',
                'name': "Альбион"
            },
            {
                'link': './strawberry/roksana.html',
                'imgSrc': 'strawberry/roksana/roksana-md',
                'name': "Роксана"
            },
            {
                'link': './strawberry/kleri.html',
                'imgSrc': 'strawberry/kleri/kleri-md',
                'name': "Клери"
            },
            {
                'link': './strawberry/san-andrea.html',
                'imgSrc': 'strawberry/san-andrea/san-andrea-md',
                'name': "Сан Андреа"
            },
            {
                'link': './strawberry/khonej.html',
                'imgSrc': 'strawberry/khonej/khonej-md',
                'name': "Хоней"
            },
        ]

    include ../../blocks/components/banner/banner
    +banner("strawberry")

    section.catalog
        .container
            .catalog__wrap
                include ../../blocks/modules/aside/aside
                include ../../blocks/modules/catalog/catalog

                +catalog(catalogItems, catalogTitle)

block scripts
    script(src="./js/main.js")
    script(src="./js/vendor.js")
