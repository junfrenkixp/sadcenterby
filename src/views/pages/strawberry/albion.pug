extends ../../layouts/product-item

block variables
    - const title = "Клубника 'Альбион'";
    - const banner = "strawberry"

block content
    - const productTitle = "Альбион";
    - const imgPath = "../img/strawberry/";
    - const addInfo = "Гарантия 1 год. Саженцы двухлетние, трехлетние, закрытая корневая система, выращено в открытом грунте, обработаны."
    -
        const postImgs = [
            {
                'img': '../img/product/post-1',
                'alt': 'M&M'
            },
            {
                'img': '../img/product/post-2',
                'alt': 'Белпочта'
            },
            {
                'img': '../img/product/post-3',
                'alt': 'Европочта'
            }
        ]
    -
        const productImgs = [
            {
                'imgPath': 'albion/albion',
                'alt': "Клубника 'Альбион'"
            }
        ]

    section.product
        .container
            .product__wrap
                .product__inner
                    .product__row
                        .product__gallery
                            .product__gallery-main
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '.jpg' alt=productImg.alt)

                            .product__gallery-nav
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '-sm.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '-sm.jpg' alt=productImg.alt)

                        .product__info
                            h2.heading.page__heading= productTitle
                            .product__info-wrap
                                .product__info-descr
                                    p
                                        | Альбион признан одним из лучших коммерческих сортов по совокупности своих качеств.
                                        br
                                        | Плодоносит весь теплый сезон, до морозов.
                                        br
                                        | Ягоды продолговатой правильной формы, красные и блестящие. Мякоть душистая, ярко-розовая и сочная.
                                        br
                                        | Вес колеблется от 30 до 50 гр.
                                        br
                                        | Первый урожай обычно собирают в начале июня, а последний - в октябре.
                                        br
                                        | Нагрузка от 500 гр до 2 кг урожая с одного куста при правильной агротехнике.
                                        br
                                        | Сильные цветоносы не позволяют ягоде достать до земли.
                                        br
                                        | Плотность посадки 40см.
                                        br
                                        | Требует укрытия на зиму.

                .add-info
                    h2.heading.add-info__heading Дополнительная информация
                    .add-info__text
                        p.add-info__descr= addInfo

                .info-logo__wrap
                    ul.info-logo__list
                        each post in postImgs
                            li.info-logo__item
                                picture
                                    source(srcset=post.img+'.webp' type="image/webp")
                                    img(src=post.img+'.png' alt=post.alt)


block scripts
    script(src="../js/main.js")
    script(src="../js/vendor.js")