extends ../../layouts/product-item

block variables
    - const title = "Можжевельник 'Мейери Компакта'";
    - const banner = "juniper"

block content
    - const productTitle = "Мейери Компакта";
    - const imgPath = "../img/juniper/";
    - const addInfo = "Гарантия 1 год. Саженцы двухлетние, трехлетние, закрытая корневая система, выращено в открытом грунте, обработаны."
    -
        const postImgs = [
            {
                'img': '../img/product/post-1',
                'alt': 'M&M'
            },
            {
                'img': '../img/product/post-2',
                'alt': 'Белпочта'
            },
            {
                'img': '../img/product/post-3',
                'alt': 'Европочта'
            }
        ]
    -
        const productImgs = [
            {
                'imgPath': 'meieri-kompakta/meieri-kompakta-3',
                'alt': "Можжевельник 'Мейери Компакта'"
            },
            {
                'imgPath': 'meieri-kompakta/meieri-kompakta-2',
                'alt': "Можжевельник 'Мейери Компакта'"
            },
            {
                'imgPath': 'meieri-kompakta/meieri-kompakta',
                'alt': "Можжевельник 'Мейери Компакта'"
            },
        ]

    section.product
        .container
            .product__wrap
                .product__inner
                    .product__row
                        .product__gallery
                            .product__gallery-main
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '.jpg' alt=productImg.alt)

                            .product__gallery-nav
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '-sm.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '-sm.jpg' alt=productImg.alt)

                        .product__info
                            h2.heading.page__heading= productTitle
                            .product__info-wrap
                                .product__info-descr
                                    p
                                        | Можжевельник чешуйчатый Мейери Компакта
                                        br
                                        i ‘Juniperus squamata Meyeri Compacta’
                                    p
                                        | Форма роста:
                                        br
                                        | Уменьшенный сорт от материнского известного Meyeri. Небольшой вечнозеленый кустарник с асимметричной кроной, раскидистыми побегами, медленнорастущий.
                                    p
                                        | Размер:
                                        br
                                        | 0,6-1,2 м высотой.
                                    p
                                        | Особенности:
                                        br
                                        | Морозостойкий, выносит городской климат, жару, хорошо переносит стрижку, умельцы формируют под ‘Бонсай’
                                    p
                                        | Отношение к почве:
                                        br
                                        | Неприхотлив, отлично растет на любых землях, как кислых, так и щелочных, устойчив к засухе.

                .add-info
                    h2.heading.add-info__heading Дополнительная информация
                    .add-info__text
                        p.add-info__descr= addInfo

                .info-logo__wrap
                    ul.info-logo__list
                        each post in postImgs
                            li.info-logo__item
                                picture
                                    source(srcset=post.img+'.webp' type="image/webp")
                                    img(src=post.img+'.png' alt=post.alt)


block scripts
    script(src="../js/main.js")
    script(src="../js/vendor.js")