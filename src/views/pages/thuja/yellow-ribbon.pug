extends ../../layouts/product-item

block variables
    - const title = "Туя 'Yellow Ribbon'";
    - const banner = "thuja"

block content
    - const productTitle = "Yellow Ribbon";
    - const imgPath = "../img/thuja/";
    - const addInfo = "Гарантия 1 год. Саженцы двухлетние, трехлетние, закрытая корневая система, выращено в открытом грунте, обработаны."
    -
        const postImgs = [
            {
                'img': '../img/product/post-1',
                'alt': 'M&M'
            },
            {
                'img': '../img/product/post-2',
                'alt': 'Белпочта'
            },
            {
                'img': '../img/product/post-3',
                'alt': 'Европочта'
            }
        ]
    -
        const productImgs = [
            {
                'imgPath': 'yellow-ribbon/yellow-ribbon',
                'alt': "Туя 'Yellow Ribbon'"
            },
        ]

    section.product
        .container
            .product__wrap
                .product__inner
                    .product__row
                        .product__gallery
                            .product__gallery-main
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '.jpg' alt=productImg.alt)

                            .product__gallery-nav
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '-sm.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '-sm.jpg' alt=productImg.alt)

                        .product__info
                            h2.heading.page__heading= productTitle
                            .product__info-wrap
                                .product__info-descr
                                    p
                                        | Туя западная Еллоу Риббон
                                        br
                                        i Thuja occidentalis Yellow Ribbon
                                    p
                                        | Описание:
                                        br
                                        | Высотой до 4 м и диаметром около 1-1,5 м. Крона узкая, коническая, ветви вертикально растущие. Хвоя чешуевидная плотно прижата к побегам и крестовидно расположена вдоль побега, яркая, золотисто-желтая. Зимой - оранжево-коричневато-желтая.
                                    p
                                        | Важно:
                                        br
                                        | Светолюбива, выносит полутень. В затененных местах хвоя тускнеет.
                                    p
                                        | Условия выращивания:
                                        br
                                        | Нетребовательна к почвенным условиям, растет на субстратах разного гранулометрического состава и кислотности. Предпочитает влажные, дренированные, плодородные, суглинистые, слабокислые почвы. Не любит переуплотненных и пересушенных почв, сухости воздуха, зимних ветров.
                                    p
                                        | Декоративность:
                                        br
                                        | Используется в групповых посадках, для создания куртин, аллей, стриженых и свободнорастущих изгородей, хвойных, древесно-кустарниковых и смешанных с многолетниками групп.

                .add-info
                    h2.heading.add-info__heading Дополнительная информация
                    .add-info__text
                        p.add-info__descr= addInfo

                .info-logo__wrap
                    ul.info-logo__list
                        each post in postImgs
                            li.info-logo__item
                                picture
                                    source(srcset=post.img+'.webp' type="image/webp")
                                    img(src=post.img+'.png' alt=post.alt)


block scripts
    script(src="../js/main.js")
    script(src="../js/vendor.js")