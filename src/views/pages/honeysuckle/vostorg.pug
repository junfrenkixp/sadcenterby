extends ../../layouts/product-item

block variables
    - const title = "Жимолость 'Восторг'";
    - const banner = "honeysuckle"

block content
    - const productTitle = "Восторг";
    - const imgPath = "../img/honeysuckle/";
    - const addInfo = "Гарантия 1 год. Саженцы двухлетние, трехлетние, закрытая корневая система, выращено в открытом грунте, обработаны."
    -
        const postImgs = [
            {
                'img': '../img/product/post-1',
                'alt': 'M&M'
            },
            {
                'img': '../img/product/post-2',
                'alt': 'Белпочта'
            },
            {
                'img': '../img/product/post-3',
                'alt': 'Европочта'
            }
        ]
    -
        const productImgs = [
            {
                'imgPath': 'vostorg/vostorg',
                'alt': "Жимолость 'Восторг'"
            },
            {
                'imgPath': 'vostorg/vostorg-2',
                'alt': "Жимолость 'Восторг'"
            },
            {
                'imgPath': 'vostorg/vostorg-3',
                'alt': "Жимолость 'Восторг'"
            },
            {
                'imgPath': 'vostorg/vostorg-4',
                'alt': "Жимолость 'Восторг'"
            },
            {
                'imgPath': 'vostorg/vostorg-5',
                'alt': "Жимолость 'Восторг'"
            },
            {
                'imgPath': 'vostorg/vostorg-6',
                'alt': "Жимолость 'Восторг'"
            },
        ]

    section.product
        .container
            .product__wrap
                .product__inner
                    .product__row
                        .product__gallery
                            .product__gallery-main
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '.jpg' alt=productImg.alt)

                            .product__gallery-nav
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '-sm.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '-sm.jpg' alt=productImg.alt)

                        .product__info
                            h2.heading.page__heading= productTitle
                            .product__info-wrap
                                .product__info-descr
                                    p
                                        | «Восторг» (Vostorg)  –раннего срока созревания.
                                        | Срок созревания – вторая декада июня.
                                        | Куст высокорослый, высотой 170-175 см, шириной 150-160см.
                                        | Скелетных ветвей немного, крона разреженная и кажется ажурной благодаря темно-зеленым листьям.
                                        | Средняя масса ягод 2 – 2,6г, плотные, темно-фиолетовые, удлиненные, с легким восковым налетом.
                                        | Вкус кисло-сладкий, без горчинки, сахаронакопление 8,9%, десертный.
                                        | Осыпаемость практически отсутствует, ягоды легко отделяются от плодоножки.
                                        | Данный сорт отлично подходит не только к употреблению в свежем виде, но так же для приготовления варенья, джемов.
                                        | Урожай первых лет колеблется в пределах 2,5 кг с куста, по мере взросления растения – до 5,5 кг.

                    .product__row
                        .product__info
                            .product__info-wrap
                                h3.page__sub-heading Дополнительно к сорту
                                .product__info-descr
                                    p Отличными опылителями сорта «Восторг» является : «Югана».

                .add-info
                    h2.heading.add-info__heading Дополнительная информация
                    .add-info__text
                        p.add-info__descr= addInfo

                .info-logo__wrap
                    ul.info-logo__list
                        each post in postImgs
                            li.info-logo__item
                                picture
                                    source(srcset=post.img+'.webp' type="image/webp")
                                    img(src=post.img+'.png' alt=post.alt)


block scripts
    script(src="../js/main.js")
    script(src="../js/vendor.js")