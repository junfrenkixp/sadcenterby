extends ../../layouts/product-item

block variables
    - const title = "Жимолость 'Индиго Джем'";
    - const banner = "honeysuckle"

block content
    - const productTitle = "Индиго Джем";
    - const imgPath = "../img/honeysuckle/";
    - const addInfo = "Гарантия 1 год. Саженцы двухлетние, трехлетние, закрытая корневая система, выращено в открытом грунте, обработаны."
    -
        const postImgs = [
            {
                'img': '../img/product/post-1',
                'alt': 'M&M'
            },
            {
                'img': '../img/product/post-2',
                'alt': 'Белпочта'
            },
            {
                'img': '../img/product/post-3',
                'alt': 'Европочта'
            }
        ]
    -
        const productImgs = [
            {
                'imgPath': 'indigo-jam/indigo-jam',
                'alt': "Жимолость 'Индиго Джем'"
            },
            {
                'imgPath': 'indigo-jam/indigo-jam-2',
                'alt': "Жимолость 'Индиго Джем'"
            },
            {
                'imgPath': 'indigo-jam/indigo-jam-3',
                'alt': "Жимолость 'Индиго Джем'"
            },
        ]

    section.product
        .container
            .product__wrap
                .product__inner
                    .product__row
                        .product__gallery
                            .product__gallery-main
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '.jpg' alt=productImg.alt)

                            .product__gallery-nav
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '-sm.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '-sm.jpg' alt=productImg.alt)

                        .product__info
                            h2.heading.page__heading= productTitle
                            .product__info-wrap
                                .product__info-descr
                                    p
                                        | «Индиго Джем» (Indigo Gem) – раннего срока созревания.
                                        | Новинка Канадской селекции.
                                        | Срок созревания – с  начала июня и до начала августа.
                                        | Куст прямостоячий, компактный, высотой 1,5-1,7 м, плотный.
                                        | Ягода удлиненная, напоминает бочку, темно – фиолетового цвета, с легким восковым налетом.
                                        | Средняя масса ягод 1,9-2,2г.
                                        | Нагрузка на куст 5-7 кг.
                                        | Плоды не осыпаются!
                                        | Отличается высокой продуктивностью и морозоустойчивостью.
                                        | Цветет «Индиго Джем» на вторую неделю мая, минуя возвратные заморозки.
                                        | Один из лучших сортов для употребления в свежем виде.
                                        | В качестве опылителя, отлично подойдут сорта: «Тундра», «Бореалис», «Хоней-Би», «Индиго Джем».
                                        | Плотность посадки 1,5-1,6м между кустами.

                    .product__row
                        .product__info
                            .product__info-wrap
                                h3.page__sub-heading Дополнительно к сорту
                                .product__info-descr
                                    p Был признан одним из самых продуктивных сортов в США.

                .add-info
                    h2.heading.add-info__heading Дополнительная информация
                    .add-info__text
                        p.add-info__descr= addInfo

                .info-logo__wrap
                    ul.info-logo__list
                        each post in postImgs
                            li.info-logo__item
                                picture
                                    source(srcset=post.img+'.webp' type="image/webp")
                                    img(src=post.img+'.png' alt=post.alt)


block scripts
    script(src="../js/main.js")
    script(src="../js/vendor.js")