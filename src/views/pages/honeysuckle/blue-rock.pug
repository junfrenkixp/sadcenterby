extends ../../layouts/product-item

block variables
    - const title = "Жимолость 'Синий утёс'";
    - const banner = "honeysuckle"

block content
    - const productTitle = "Синий утёс";
    - const imgPath = "../img/honeysuckle/";
    - const addInfo = "Гарантия 1 год. Саженцы двухлетние, трехлетние, закрытая корневая система, выращено в открытом грунте, обработаны."
    -
        const postImgs = [
            {
                'img': '../img/product/post-1',
                'alt': 'M&M'
            },
            {
                'img': '../img/product/post-2',
                'alt': 'Белпочта'
            },
            {
                'img': '../img/product/post-3',
                'alt': 'Европочта'
            }
        ]
    -
        const productImgs = [
            {
                'imgPath': 'blue-rock/blue-rock',
                'alt': "Жимолость 'Синий утёс'"
            },
            {
                'imgPath': 'blue-rock/blue-rock-2',
                'alt': "Жимолость 'Синий утёс'"
            },
        ]

    section.product
        .container
            .product__wrap
                .product__inner
                    .product__row
                        .product__gallery
                            .product__gallery-main
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '.jpg' alt=productImg.alt)

                            .product__gallery-nav
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '-sm.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '-sm.jpg' alt=productImg.alt)

                        .product__info
                            h2.heading.page__heading= productTitle
                            .product__info-wrap
                                .product__info-descr
                                    p
                                        | Синий утёс - новинка ФГУП "Бакчарское", замечательный среднеранний сорт универсального назначения.
                                        | Образует куст до 1,7м, крона приподнятая, полураскидистая.
                                        | Ягоды крупные, весом до 3-3,5гр(!), удлинённо-овальные, чернильно-фиолетовой окраски с
                                        | выраженным восковым налётом. Вкус изумительный: сбалансированный десертный, приятный ягодный аромат.
                                        | Кожица вмеру плотная, отрыв сухой, транспортабельность и лёжкость хорошие.
                                        | Осыпаемость полностью отсутствует. Урожайность 4-4,5кг с куста! Сорт частично самоплоден.

                    .product__row
                        .product__info
                            .product__info-wrap
                                h3.page__sub-heading Дополнительно к сорту
                                .product__info-descr
                                    p Для повышения урожайности желательно сажать рядом несколько разных сортов, в качестве дополнительного опылителя рекомендуем сорта "Черное Мороженое", "Голубое Мороженое", "Бакчарская", "Золушка", "Сильгинка".

                .add-info
                    h2.heading.add-info__heading Дополнительная информация
                    .add-info__text
                        p.add-info__descr= addInfo

                .info-logo__wrap
                    ul.info-logo__list
                        each post in postImgs
                            li.info-logo__item
                                picture
                                    source(srcset=post.img+'.webp' type="image/webp")
                                    img(src=post.img+'.png' alt=post.alt)


block scripts
    script(src="../js/main.js")
    script(src="../js/vendor.js")