block variables
	- const title = "Прочее | Питомник растительных культур семьи Пухальских";

block content

	- let otherTitle = 'Прочее';
	-
		let otherCatalogItems = [
			{
				'link': 'currant.html',
				'imgSrc': 'covers/currant',
				'name': "Смородина"
			},
			{
				'link': 'gooseberry.html',
				'imgSrc': 'covers/gooseberry',
				'name': "Крыжовник"
			},
			{
				'link': 'blackberry.html',
				'imgSrc': 'covers/blackberry',
				'name': "Ежевика"
			},
			{
				'link': 'raspberries.html',
				'imgSrc': 'covers/raspberries',
				'name': "Малина"
			},
			{
				'link': 'strawberry.html',
				'imgSrc': 'covers/strawberry',
				'name': "Клубника"
			},
			{
				'link': 'lemon.html',
				'imgSrc': 'covers/lemon',
				'name': "Лимон"
			},
			{
				'link': 'honey.html',
				'imgSrc': 'covers/honey',
				'name': "Мёд"
