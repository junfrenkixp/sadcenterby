extends ../../layouts/product-item

block variables
    - const title = "Кипарисовик Лавсона Вайт Спот";
    - const banner = "cypress"

block content
    - const productTitle = "Кипарисовик Лавсона Вайт Спот";
    - const imgPath = "../img/cypress/";
    - const addInfo = "Саженцы двухлетние, трехлетние, закрытая корневая система, выращено в открытом грунте, обработаны. К продукции прилагается наша аннотация по уходу (обработка, посадка)."
    -
        const postImgs = [
            {
                'img': '../img/product/post-1',
                'alt': 'M&M'
            },
            {
                'img': '../img/product/post-2',
                'alt': 'Белпочта'
            },
            {
                'img': '../img/product/post-3',
                'alt': 'Европочта'
            }
        ]
    -
        const productImgs = [
            {
                'imgPath': 'vait-spot/vait-spot',
                'alt': "Кипарисовик Лавсона Вайт Спот"
            },
        ]

    section.product
        .container
            .product__wrap
                .product__inner
                    .product__row
                        .product__gallery
                            .product__gallery-main
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '.jpg' alt=productImg.alt)

                            .product__gallery-nav
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '-sm.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '-sm.jpg' alt=productImg.alt)

                        .product__info
                            h2.heading.page__heading= productTitle
                            .product__info-wrap
                                .product__info-descr
                                    p
                                        i Chamaecyparis lawsoniana White Spot
                                    p
                                        | Форма:
                                        br
                                        | Вечнозелёное очень декоративное небольшое дерево или крупный кустарник с бирюзовой окраской. Крона колоновидная, узкая, густо разветвлённая. Ветви строго вертикальные. Растёт медленно.
                                    p
                                        | Размер:
                                        br
                                        | Высота 5м, ширина 2 (до 3,5) м. Годовой прирост в высоту около 15 см, в ширину 20см
                                    p
                                        | Местоположение:
                                        br
                                        | Светолюбив, но может расти в слегка затенённом месте.
                                    p
                                        | Требования к почве:
                                        br
                                        | Умеренно требователен. Предпочитает влажные, плодородные, проницаемые суглинистые почвы с реакцией среды от кислой до нейтральной. Не переносит известковых почв.
                                    p
                                        | Применение:
                                        br
                                        | В составе смешанных композиций, вертикальные акценты.
                .add-info
                    h2.heading.add-info__heading Дополнительная информация
                    .add-info__text
                        p.add-info__descr= addInfo

                .info-logo__wrap
                    ul.info-logo__list
                        each post in postImgs
                            li.info-logo__item
                                picture
                                    source(srcset=post.img+'.webp' type="image/webp")
                                    img(src=post.img+'.png' alt=post.alt)


block scripts
    script(src="../js/main.js")
    script(src="../js/vendor.js")