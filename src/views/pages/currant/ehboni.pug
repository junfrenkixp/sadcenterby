extends ../../layouts/product-item

block variables
    - const title = "Смородина 'Эбони'";
    - const banner = "currant"

block content
    - const productTitle = "Эбони";
    - const imgPath = "../img/currant/";
    - const addInfo = "Гарантия 1 год. Саженцы двухлетние, трехлетние, закрытая корневая система, выращено в открытом грунте, обработаны."
    -
        const postImgs = [
            {
                'img': '../img/product/post-1',
                'alt': 'M&M'
            },
            {
                'img': '../img/product/post-2',
                'alt': 'Белпочта'
            },
            {
                'img': '../img/product/post-3',
                'alt': 'Европочта'
            }
        ]
    -
        const productImgs = [
            {
                'imgPath': 'ehboni/ehboni',
                'alt': "Смородина 'Эбони'"
            }
        ]

    section.product
        .container
            .product__wrap
                .product__inner
                    .product__row
                        .product__gallery
                            .product__gallery-main
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '.jpg' alt=productImg.alt)

                            .product__gallery-nav
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '-sm.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '-sm.jpg' alt=productImg.alt)

                        .product__info
                            h2.heading.page__heading= productTitle
                            .product__info-wrap
                                .product__info-descr
                                    p
                                        | Смородина черная «Эбони» - раннего срока созревания.
                                        | Куст мощный, побеги вертикально направлены, компактный.
                                        | Растет высотой 70-110 см.
                                        | Ягоды крупные и очень крупные, до 20-22 мм в диаметре.
                                        | Средняя масса ягод 3,0-3,8г.
                                        | Округлые, с нежным вкусом и ярко выраженным ароматом.
                                        | Нагрузка регулярная, стабильная, высокая, 4,5-5,0 кг с куста.
                                        | Теневынослив, предпочитает умеренное увлажненную почву.
                                        | Высокая морозоустойчивость, в условиях аг «Прудок», аг «Зимовищи», подмерзаний соцветий не наблюдалось.
                                    p
                                        | Имеет высокую резистентность к основным болезням смородины (почковый клещ, тля, мучнистая роса, антракноз, септориоз).
                                        | Сорт новый, перспективный. Описание будет дополняться.

                .add-info
                    h2.heading.add-info__heading Дополнительная информация
                    .add-info__text
                        p.add-info__descr= addInfo

                .info-logo__wrap
                    ul.info-logo__list
                        each post in postImgs
                            li.info-logo__item
                                picture
                                    source(srcset=post.img+'.webp' type="image/webp")
                                    img(src=post.img+'.png' alt=post.alt)


block scripts
    script(src="../js/main.js")
    script(src="../js/vendor.js")