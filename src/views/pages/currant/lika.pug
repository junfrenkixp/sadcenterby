extends ../../layouts/product-item

block variables
    - const title = "Смородина 'Лика'";
    - const banner = "currant"

block content
    - const productTitle = "'Лика'";
    - const imgPath = "../img/currant/";
    - const addInfo = "Гарантия 1 год. Саженцы двухлетние, трехлетние, закрытая корневая система, выращено в открытом грунте, обработаны."
    -
        const postImgs = [
            {
                'img': '../img/product/post-1',
                'alt': 'M&M'
            },
            {
                'img': '../img/product/post-2',
                'alt': 'Белпочта'
            },
            {
                'img': '../img/product/post-3',
                'alt': 'Европочта'
            }
        ]
    -
        const productImgs = [
            {
                'imgPath': 'lika/lika',
                'alt': "Смородина 'Лика'"
            }
        ]

    section.product
        .container
            .product__wrap
                .product__inner
                    .product__row
                        .product__gallery
                            .product__gallery-main
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '.jpg' alt=productImg.alt)

                            .product__gallery-nav
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '-sm.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '-sm.jpg' alt=productImg.alt)

                        .product__info
                            h2.heading.page__heading= productTitle
                            .product__info-wrap
                                .product__info-descr
                                    p
                                        | Смородина черная «Лика».
                                        | Бессемянный сорт среднего срока созревания получен НИИ садоводства Сибири имени М. А. Лисавенко, Л. Н. Забелина, Е. И.Наквасина.
                                        | Побеги толстые, прямые неопушенные.
                                        | Растет средне раскидистым кустом, высотой до 120-130 см.
                                        | Ягоды крупные, средняя масса 2,5-3,0 г.
                                        | Округлые, выровненные, десертные, с сильным приятным ароматом.
                                        | Ягоды в кисти располагаются плотно, отрыв сухой, легкий.
                                        | Нагрузка регулярная, стабильная 2,5-3,0 кг с куста.
                                        | Использование универсальное.
                                        | Отличительная черта данного сорта – бессемянность.
                                        | Сорт имеют повышенную устойчивость к почковому клещу, тле, мучнистой росе, антракнозу, септориозу.
                                        | Отличный выбор для свежего десерта и заморозок.

                .add-info
                    h2.heading.add-info__heading Дополнительная информация
                    .add-info__text
                        p.add-info__descr= addInfo

                .info-logo__wrap
                    ul.info-logo__list
                        each post in postImgs
                            li.info-logo__item
                                picture
                                    source(srcset=post.img+'.webp' type="image/webp")
                                    img(src=post.img+'.png' alt=post.alt)


block scripts
    script(src="../js/main.js")
    script(src="../js/vendor.js")