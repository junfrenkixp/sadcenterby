extends ../layouts/default

block variables
    - const title = "Туя | Питомник растительных культур семьи Пухальских";

block content

    - let catalogTitle = 'Туя';
    -
        let catalogItems = [
            {
                'link': './thuja/yellow-ribbon.html',
                'imgSrc': 'thuja/yellow-ribbon/yellow-ribbon-md',
                'name': "Yellow Ribbon"
            },
        ]

    include ../../blocks/components/banner/banner
    +banner("thuja")

    section.catalog
        .container
            .catalog__wrap
                include ../../blocks/modules/aside/aside
                include ../../blocks/modules/catalog/catalog

                +catalog(catalogItems, catalogTitle)

block scripts
    script(src="./js/main.js")
    script(src="./js/vendor.js")
