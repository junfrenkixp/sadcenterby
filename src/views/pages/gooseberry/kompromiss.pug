extends ../../layouts/product-item

block variables
    - const title = "Крыжовник 'Компромисс'";
    - const banner = "gooseberry"

block content
    - const productTitle = "Компромисс";
    - const imgPath = "../img/gooseberry/";
    - const addInfo = "Гарантия 1 год. Саженцы двухлетние, трехлетние, закрытая корневая система, выращено в открытом грунте, обработаны."
    -
        const postImgs = [
            {
                'img': '../img/product/post-1',
                'alt': 'M&M'
            },
            {
                'img': '../img/product/post-2',
                'alt': 'Белпочта'
            },
            {
                'img': '../img/product/post-3',
                'alt': 'Европочта'
            }
        ]
    -
        const productImgs = [
            {
                'imgPath': 'kompromiss/kompromiss',
                'alt': "Крыжовник 'Компромисс'"
            },
        ]
    section.product
        .container
            .product__wrap
                .product__inner
                    .product__row
                        .product__gallery
                            .product__gallery-main
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '.jpg' alt=productImg.alt)

                            .product__gallery-nav
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '-sm.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '-sm.jpg' alt=productImg.alt)

                        .product__info
                            h2.heading.page__heading= productTitle
                            .product__info-wrap
                                .product__info-descr
                                    p
                                        | Крыжовник красный «Компромисс» РФ – среднего срока созревания.
                                        | Срок созревания – середина июля.
                                        | Куст аккуратный, побеги толстые, среднерослый, не раскидистый, высотой 120-140 см.
                                        | «Компромисс» бесшипый сорт.
                                        | Ягоды разнообразные, крупные, округленной формы.
                                        | Полностью вызревшие ягоды становятся темно-фиолетовыми.
                                        | Средняя масса 12-15 г.
                                        | Урожайность с куста 6,5-8 кг
                                        | Вкус сладкий, гармоничный, ароматный.
                                        | Зарекомендовал себя как устойчивый сорт к основным заболеваниям крыжовника.
                                        | Светолюбив, теневынослив.
                                        | В условиях Гомельской области, подмерзаний не наблюдалось.
                                        | Описание будет дополняться, сорт новинка.

                .add-info
                    h2.heading.add-info__heading Дополнительная информация
                    .add-info__text
                        p.add-info__descr= addInfo

                .info-logo__wrap
                    ul.info-logo__list
                        each post in postImgs
                            li.info-logo__item
                                picture
                                    source(srcset=post.img + '.webp' type="image/webp")
                                    img(src=post.img + '.png' alt=post.alt)


block scripts
    script(src="../js/main.js")
    script(src="../js/vendor.js")