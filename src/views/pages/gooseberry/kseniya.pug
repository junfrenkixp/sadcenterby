extends ../../layouts/product-item

block variables
    - const title = "Крыжовник 'Ксения'";
    - const banner = "gooseberry"

block content
    - const productTitle = "'Ксения'";
    - const imgPath = "../img/gooseberry/";
    - const addInfo = "Гарантия 1 год. Саженцы двухлетние, трехлетние, закрытая корневая система, выращено в открытом грунте, обработаны."
    -
        const postImgs = [
            {
                'img': '../img/product/post-1',
                'alt': 'M&M'
            },
            {
                'img': '../img/product/post-2',
                'alt': 'Белпочта'
            },
            {
                'img': '../img/product/post-3',
                'alt': 'Европочта'
            }
        ]
    -
        const productImgs = [
            {
                'imgPath': 'kseniya/kseniya',
                'alt': "Крыжовник 'Ксения'"
            },
            {
                'imgPath': 'kseniya/kseniya-2',
                'alt': "Крыжовник 'Ксения'"
            },
            {
                'imgPath': 'kseniya/kseniya-3',
                'alt': "Крыжовник 'Ксения'"
            },
            {
                'imgPath': 'kseniya/kseniya-4',
                'alt': "Крыжовник 'Ксения'"
            },
            {
                'imgPath': 'kseniya/kseniya-5',
                'alt': "Крыжовник 'Ксения'"
            },
            {
                'imgPath': 'kseniya/kseniya-6',
                'alt': "Крыжовник 'Ксения'"
            },
        ]
    section.product
        .container
            .product__wrap
                .product__inner
                    .product__row
                        .product__gallery
                            .product__gallery-main
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '.jpg' alt=productImg.alt)

                            .product__gallery-nav
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '-sm.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '-sm.jpg' alt=productImg.alt)

                        .product__info
                            h2.heading.page__heading= productTitle
                            .product__info-wrap
                                .product__info-descr
                                    p
                                        | Крыжовник розовый «Ксения» (Rafzuerа) Швейцария  - раннего срока созревания.
                                        | Срок созревания – с середины июня.
                                        | Куст прямостоячий, раскидистый, высотой 120-150 см, средней густоты, быстрорастущий.
                                        | В плодоношение  вступает через 4–8 месяцев после посадки.
                                        | Расчётное время для лучшей урожайности — 28–32 месяца.
                                        | Ягоды красивые, светло-розовые, крупные, имеют шарообразную форму, некоторые слегка вытянуты у основания. Мякоть сочная, сладкая на вкус.
                                        | В диаметре 20-25мм, весом 14-16г(!) (легко собирать).
                                        | Урожайность 8 - 12 кг с куста(!).
                                        | Морозоустойчивость -35, цветет после возвратных заморозков.
                                        | Высокая устойчивость к мучнистой росе и другим грибковым заболеваниям
                                        | Не требует значительных усилий по уходу и выбора почвы.

                .add-info
                    h2.heading.add-info__heading Дополнительная информация
                    .add-info__text
                        p.add-info__descr= addInfo

                .info-logo__wrap
                    ul.info-logo__list
                        each post in postImgs
                            li.info-logo__item
                                picture
                                    source(srcset=post.img + '.webp' type="image/webp")
                                    img(src=post.img + '.png' alt=post.alt)


block scripts
    script(src="../js/main.js")
    script(src="../js/vendor.js")