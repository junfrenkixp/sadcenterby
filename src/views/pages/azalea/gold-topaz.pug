extends ../../layouts/product-item

block variables
    - const title = "Азалия 'Голд Топаз'";
    - const banner = "azalea"

block content
    - const productTitle = "Голд Топаз";
    - const imgPath = "../img/azalea/";
    - const addInfo = "Саженцы двухлетние, трехлетние, закрытая корневая система, выращено в открытом грунте, обработаны. К продукции прилагается наша аннотация по уходу (обработка, посадка)."
    -
        const postImgs = [
            {
                'img': '../img/product/post-1',
                'alt': 'M&M'
            },
            {
                'img': '../img/product/post-2',
                'alt': 'Белпочта'
            },
            {
                'img': '../img/product/post-3',
                'alt': 'Европочта'
            }
        ]
    -
        const productImgs = [
            {
                'imgPath': 'gold-topaz/gold-topaz',
                'alt': "Азалия 'Голд Топаз'"
            },
        ]

    section.product
        .container
            .product__wrap
                .product__inner
                    .product__row
                        .product__gallery
                            .product__gallery-main
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '.jpg' alt=productImg.alt)

                            .product__gallery-nav
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '-sm.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '-sm.jpg' alt=productImg.alt)

                        .product__info
                            h2.heading.page__heading= productTitle
                            .product__info-wrap
                                .product__info-descr
                                    p
                                        b Азалия листопадная Голд Топаз.
                                        br
                                        | Это лиственный кустарник из группы Knap Hill Hybride.
                                        br
                                        | Обладает чрезвычайной морозостойкостью и абсолютной неприхотливостью к агротехническим мероприятиям.
                                        br
                                        | H- 1,0м; D - 1,5м.
                                        br
                                        | Форма: шаровидная, слегка сплющенная.
                                        br
                                        | Листья: листья при распускании бронзовые, затем темно-зеленые, осенью становятся малиново-красными, а позже оранжево-желтыми.
                                        br
                                        | Цветение: цветет в мае.Цветки желтые с крупными оранжевыми крапинками, многочисленные, ароматные, чашеобразные.
                                        br
                                        | Свет: солнце,полутень.
                                        br
                                        | Почва: хорошо дренируемые почвы с кислой реакцией.
                                        br
                                        | Зона зимостойкости: 5.
                                        br
                                        | Устойчивость к стрижке: не нуждается, только в санитарной.
                                        br
                                        | Влаго-засухоустойчивость: нуждается в защищенном от ветра месте.
                .add-info
                    h2.heading.add-info__heading Дополнительная информация
                    .add-info__text
                        p.add-info__descr= addInfo

                .info-logo__wrap
                    ul.info-logo__list
                        each post in postImgs
                            li.info-logo__item
                                picture
                                    source(srcset=post.img+'.webp' type="image/webp")
                                    img(src=post.img+'.png' alt=post.alt)


block scripts
    script(src="../js/main.js")
    script(src="../js/vendor.js")