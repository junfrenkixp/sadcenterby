extends ../../layouts/product-item

block variables
    - const title = "Виноград 'Кодрянка'";
    - const banner = "grapes"

block content
    - const productTitle = "Кодрянка";
    - const imgPath = "../img/grapes/";
    - const addInfo = "Гарантия 1 год. Саженцы двухлетние, трехлетние, закрытая корневая система, выращено в открытом грунте, обработаны. К продукции прилагается наша аннотация по уходу (обработка, посадка)."
    -
        const postImgs = [
            {
                'img': '../img/product/post-1',
                'alt': 'M&M'
            },
            {
                'img': '../img/product/post-2',
                'alt': 'Белпочта'
            },
            {
                'img': '../img/product/post-3',
                'alt': 'Европочта'
            }
        ]
    -
        const productImgs = [
            {
                'imgPath': 'kodryanka/kodryanka',
                'alt': "Виноград 'Кодрянка'"
            },
            {
                'imgPath': 'kodryanka/kodryanka-2',
                'alt': "Виноград 'Кодрянка'"
            },
        ]

    section.product
        .container
            .product__wrap
                .product__inner
                    .product__row
                        .product__gallery
                            .product__gallery-main
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '.jpg' alt=productImg.alt)

                            .product__gallery-nav
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '-sm.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '-sm.jpg' alt=productImg.alt)

                        .product__info
                            h2.heading.page__heading= productTitle
                            .product__info-wrap
                                .product__info-descr
                                    p
                                        | (Молдова x Маршальский)
                                        br
                                        | ["Виерул", Молдова]
                                        br
                                        | Синоним: Black magic
                                    p
                                        | Кодрянка - Столовый сорт винограда.
                                    p
                                        | Срок созревания середина - конец августа.
                                    p
                                        | Масса грозди от  500-1300г.
                                    p
                                        | Ягода крупная, синяя.
                                    p
                                        | Кожица тонкая. Гроздь хорошо сохраняется на побеге. Урожайность высокая, стабильная.
                                    p
                                        | Морозоустойчивость до -18-25, в условиях города Мозыря подмерзаний не наблюдалось.
                                    p
                                        | Слабо поражается милдью, серой гнилью, оидиумом – 2 балла (из 4); высокоустойчив к антрокнозу.
                                    p
                                        | Этот сорт знаком практически всем отечественным садоводам-любителям на постсоветском пространстве. Этот виноград высоко ценится дачниками и фермерами не только на юге нашей страны, но и хорошо зарекомендовал себя на территории Беларуси.
                    .product__row
                        .product__info
                            .product__info-wrap
                                h3.page__sub-heading Дополнительно к сорту
                                .product__info-descr
                                    p Может растрескиваться и горошить, если при цветении была холодная погода, дожди. Очень сладкий и вкусный.

                .add-info
                    h2.heading.add-info__heading Дополнительная информация
                    .add-info__text
                        p.add-info__descr= addInfo

                .info-logo__wrap
                    ul.info-logo__list
                        each post in postImgs
                            li.info-logo__item
                                picture
                                    source(srcset=post.img+'.webp' type="image/webp")
                                    img(src=post.img+'.png' alt=post.alt)


block scripts
    script(src="../js/main.js")
    script(src="../js/vendor.js")