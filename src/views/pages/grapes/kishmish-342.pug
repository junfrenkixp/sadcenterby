extends ../../layouts/product-item

block variables
    - const title = "Виноград 'Кишмиш №342'";
    - const banner = "grapes"

block content
    - const productTitle = "'Кишмиш №342'";
    - const imgPath = "../img/grapes/";
    - const addInfo = "Гарантия 1 год. Саженцы двухлетние, трехлетние, закрытая корневая система, выращено в открытом грунте, обработаны. К продукции прилагается наша аннотация по уходу (обработка, посадка)."
    -
        const postImgs = [
            {
                'img': '../img/product/post-1',
                'alt': 'M&M'
            },
            {
                'img': '../img/product/post-2',
                'alt': 'Белпочта'
            },
            {
                'img': '../img/product/post-3',
                'alt': 'Европочта'
            }
        ]
    -
        const productImgs = [
            {
                'imgPath': 'kishmish-342/kishmish-342',
                'alt': "Виноград 'Кишмиш №342'"
            },
        ]

    section.product
        .container
            .product__wrap
                .product__inner
                    .product__row
                        .product__gallery
                            .product__gallery-main
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '.jpg' alt=productImg.alt)

                            .product__gallery-nav
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '-sm.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '-sm.jpg' alt=productImg.alt)

                        .product__info
                            h2.heading.page__heading= productTitle
                            .product__info-wrap
                                .product__info-descr
                                    p
                                        | Кишмиш № 342 - гибридная форма винограда, очень раннего срока созревания (начало августа).
                                    p
                                        | Куст сильнорослый, ягоды средние, масса ягоды от 2 до 4 г, золотистого оттенка, круглой формы, косточки отсутствуют.
                                    p
                                        | Приятный вкус, сочный. Средняя масса грозди может достигать до 600г, средняя плотность.
                                    p
                                        | Давно зарекомендовал себя как устойчивый сорт.
                                    p
                                        | Морозоустойчивость до -28 градусов.
                                    p
                                        | Ягоды после дождей не растрескиваются.
                                    p
                                        | Независимо от года, урожайность гарантирована, вызревает хорошо, не нуждается в укрытии на зиму. Часто используется как дополнительный опылитель.
                                    p
                                        | Многие выращивают к-ш 342 для собственного семейного потребления, для детей, сорт позволяет получать качественный очень ранний урожай с минимальным применением пестицидов, и это является важным его достоинством.

                    .product__row
                        .product__info
                            .product__info-wrap
                                h3.page__sub-heading Дополнительно к сорту
                                .product__info-descr
                                    p Данный сорт станет отличным решением для начинающего виноградаря.

                .add-info
                    h2.heading.add-info__heading Дополнительная информация
                    .add-info__text
                        p.add-info__descr= addInfo

                .info-logo__wrap
                    ul.info-logo__list
                        each post in postImgs
                            li.info-logo__item
                                picture
                                    source(srcset=post.img+'.webp' type="image/webp")
                                    img(src=post.img+'.png' alt=post.alt)


block scripts
    script(src="../js/main.js")
    script(src="../js/vendor.js")