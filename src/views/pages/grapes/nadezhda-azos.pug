extends ../../layouts/product-item

block variables
    - const title = "Виноград 'Надежда АЗОС'";
    - const banner = "grapes"

block content
    - const productTitle = "Надежда АЗОС";
    - const imgPath = "../img/grapes/";
    - const addInfo = "Гарантия 1 год. Саженцы двухлетние, трехлетние, закрытая корневая система, выращено в открытом грунте, обработаны. К продукции прилагается наша аннотация по уходу (обработка, посадка)."
    -
        const postImgs = [
            {
                'img': '../img/product/post-1',
                'alt': 'M&M'
            },
            {
                'img': '../img/product/post-2',
                'alt': 'Белпочта'
            },
            {
                'img': '../img/product/post-3',
                'alt': 'Европочта'
            }
        ]
    -
        const productImgs = [
            {
                'imgPath': 'nadezhda-azos/nadezhda-azos',
                'alt': "Виноград 'Надежда АЗОС'"
            },
            {
                'imgPath': 'nadezhda-azos/nadezhda-azos-2',
                'alt': "Виноград 'Надежда АЗОС'"
            },
            {
                'imgPath': 'nadezhda-azos/nadezhda-azos-3',
                'alt': "Виноград 'Надежда АЗОС'"
            }
        ]

    section.product
        .container
            .product__wrap
                .product__inner
                    .product__row
                        .product__gallery
                            .product__gallery-main
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '.jpg' alt=productImg.alt)

                            .product__gallery-nav
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '-sm.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '-sm.jpg' alt=productImg.alt)

                        .product__info
                            h2.heading.page__heading= productTitle
                            .product__info-wrap
                                .product__info-descr
                                    p
                                        | Надежда АЗОС – столовый сорт винограда, среднего срока созревания. Срок созревания с 20х чисел августа. Куст сильнорослый, цветок обоеполый. Масса грозди 500-800г Грозди средней плотности или рыхлые, конические или ветвистые. Ягода удлиненно-овальная, простого вкуса, синяя (черная) массой 6-8, некоторые могут достигать до 10г г. Сахаристость 15-17%, кислотность - 7-8 г/л. Повышенная устойчивость к милдью, серой гнили, а так же к оидиуму. Морозоустойчивость до -23 градусов.

                .add-info
                    h2.heading.add-info__heading Дополнительная информация
                    .add-info__text
                        p.add-info__descr= addInfo

                .info-logo__wrap
                    ul.info-logo__list
                        each post in postImgs
                            li.info-logo__item
                                picture
                                    source(srcset=post.img+'.webp' type="image/webp")
                                    img(src=post.img+'.png' alt=post.alt)


block scripts
    script(src="../js/main.js")
    script(src="../js/vendor.js")