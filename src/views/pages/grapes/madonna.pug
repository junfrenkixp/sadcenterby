extends ../../layouts/product-item

block variables
    - const title = "Виноград 'Мадонна'";
    - const banner = "grapes"

block content
    - const productTitle = "'Мадонна'";
    - const imgPath = "../img/grapes/";
    - const addInfo = "Саженцы двухлетние, трехлетние, закрытая корневая система, выращено в открытом грунте, обработаны. К продукции прилагается наша аннотация по уходу (обработка, посадка)."
    -
        const postImgs = [
            {
                'img': '../img/product/post-1',
                'alt': 'M&M'
            },
            {
                'img': '../img/product/post-2',
                'alt': 'Белпочта'
            },
            {
                'img': '../img/product/post-3',
                'alt': 'Европочта'
            }
        ]
    -
        const productImgs = [
            {
                'imgPath': 'madonna/madonna',
                'alt': "Виноград 'Мадонна'"
            }
        ]

    section.product
        .container
            .product__wrap
                .product__inner
                    .product__row
                        .product__gallery
                            .product__gallery-main
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '.jpg' alt=productImg.alt)

                            .product__gallery-nav
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '-sm.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '-sm.jpg' alt=productImg.alt)

                        .product__info
                            h2.heading.page__heading= productTitle
                            .product__info-wrap
                                .product__info-descr
                                    p
                                        | Сорт винограда Мадонна является ультраранним, крупноплодным, обладает рядом положительных характеристик.
                                        | Столовая форма Капелюшного В.У., срок созревания 95-105 дней. Цветок обоеполый. Кусты очень большой силы роста. Гроздь цилиндрическая, очень крупная до 30-40см и более, массой 900-2000г, рыхлая или средней плотности. Ягоды 15-20 гр, зелено-желтые (напоминают Аркадию), мякоть плотная, хрустящая, приятного вкуса с легким мускатом, высокое сахаронакопление. Ягоды не лопаются, могут долго оставаться на кустах (в сезоне 2020 года до конца сентября), не теряя товарных и вкусовых качеств. Урожайность высокая и стабильная. Нагрузка на куст 40-45 глазков (после 5 лет), обрезка лоз плодоношения на 8-12 глазков. Побеги вызревают рано, черенки легко укореняются. Повышенная устойчивость к заболеваниям, но требует стандартные 2-3 обработки в период вегетации.
                                        | Морозоустойчивость минус -23-25°С.
                                        | Также этот сорт является одним из любимейших у виноградарей за свою устойчивость к растрескиваию и стабильно большую урожайность.

                    .product__row
                        .product__info
                            .product__info-wrap
                                h3.page__sub-heading Дополнительно к сорту
                                .product__info-descr
                                    p Любимчик из-за высокой урожайности, отсутвия растрескивания и хороших вкусовых качеств.

                .add-info
                    h2.heading.add-info__heading Дополнительная информация
                    .add-info__text
                        p.add-info__descr= addInfo

                .info-logo__wrap
                    ul.info-logo__list
                        each post in postImgs
                            li.info-logo__item
                                picture
                                    source(srcset=post.img+'.webp' type="image/webp")
                                    img(src=post.img+'.png' alt=post.alt)


block scripts
    script(src="../js/main.js")
    script(src="../js/vendor.js")