extends ../../layouts/product-item

block variables
    - const title = "Виноград 'Зарница'";
    - const banner = "grapes"

block content
    - const productTitle = "Зарница";
    - const imgPath = "../img/grapes/";
    - const addInfo = "Гарантия 1 год. Саженцы двухлетние, трехлетние, закрытая корневая система, выращено в открытом грунте, обработаны. К продукции прилагается наша аннотация по уходу (обработка, посадка)."
    -
        const postImgs = [
            {
                'img': '../img/product/post-1',
                'alt': 'M&M'
            },
            {
                'img': '../img/product/post-2',
                'alt': 'Белпочта'
            },
            {
                'img': '../img/product/post-3',
                'alt': 'Европочта'
            }
        ]
    -
        const productImgs = [
            {
                'imgPath': 'zarnica/zarnica',
                'alt': "Виноград 'Зарница'"
            },
            {
                'imgPath': 'zarnica/zarnica-2',
                'alt': "Виноград 'Зарница'"
            },
        ]

    section.product
        .container
            .product__wrap
                .product__inner
                    .product__row
                        .product__gallery
                            .product__gallery-main
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '.jpg' alt=productImg.alt)

                            .product__gallery-nav
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '-sm.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '-sm.jpg' alt=productImg.alt)

                        .product__info
                            h2.heading.page__heading= productTitle
                            .product__info-wrap
                                .product__info-descr
                                    p
                                        |  Зарница - гибридная форма винограда любительской селекции. Очень раннего срока созревания: 110 дней. Созревает на 5-7 дней раньше, чем  Аркадия.
                                        | Грозди крупные, 1100-1900гр , конические, среднеплотные, не подвержены горошению, красивые и очень презентабельные.
                                    p
                                        | Ягоды крупные, 8-10 г, овальные, желтого-зеленого цвета. Вкус приятный, с гармоничным сочетанием сахаристости. Мякоть плотная, кожица съедаемая.
                                        | В корнесобственной культуре побеги сильнорослые . Лоза вызревает ежегодно, черенки легко укореняются. Морозоустойчивость до -23 С. Устойчивость к милдью и оидиуму 3-3,5 балла. Урожайность высокая, стабильная.

                    .product__row
                        .product__info
                            .product__info-wrap
                                h3.page__sub-heading Дополнительно к сорту
                                .product__info-descr
                                    p Категорически не любит переливы воды, в дождливый год ягода может трещать. Осами повреждается слабо. За 18 лет подмерз 1 раз. С перегрузкой справляется хорошо, лоза вызревает практически полностью. Необходимо ограничивать азотные подкормки.

                .add-info
                    h2.heading.add-info__heading Дополнительная информация
                    .add-info__text
                        p.add-info__descr= addInfo

                .info-logo__wrap
                    ul.info-logo__list
                        each post in postImgs
                            li.info-logo__item
                                picture
                                    source(srcset=post.img+'.webp' type="image/webp")
                                    img(src=post.img+'.png' alt=post.alt)


block scripts
    script(src="../js/main.js")
    script(src="../js/vendor.js")