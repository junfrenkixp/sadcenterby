extends ../../layouts/product-item

block variables
    - const title = "Виноград 'Кишмиш Велес'";
    - const banner = "grapes"

block content
    - const productTitle = "Кишмиш Велес";
    - const imgPath = "../img/grapes/";
    - const addInfo = "Гарантия 1 год. Саженцы двухлетние, трехлетние, закрытая корневая система, выращено в открытом грунте, обработаны. К продукции прилагается наша аннотация по уходу (обработка, посадка)."
    -
        const postImgs = [
            {
                'img': '../img/product/post-1',
                'alt': 'M&M'
            },
            {
                'img': '../img/product/post-2',
                'alt': 'Белпочта'
            },
            {
                'img': '../img/product/post-3',
                'alt': 'Европочта'
            }
        ]
    -
        const productImgs = [
            {
                'imgPath': 'kishmish-veles/kishmish-veles',
                'alt': "Виноград 'Кишмиш Велес'"
            },
            {
                'imgPath': 'kishmish-veles/kishmish-veles-2',
                'alt': "Виноград 'Кишмиш Велес'"
            },
        ]

    section.product
        .container
            .product__wrap
                .product__inner
                    .product__row
                        .product__gallery
                            .product__gallery-main
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '.jpg' alt=productImg.alt)

                            .product__gallery-nav
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '-sm.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '-sm.jpg' alt=productImg.alt)

                        .product__info
                            h2.heading.page__heading= productTitle
                            .product__info-wrap
                                .product__info-descr
                                    p
                                        | Велес - бессемянный сорт винограда раннего срока созревания.
                                    p
                                        | Кишмиш Велес - гибридная форма винограда приватной селекции Загорулько В.В.
                                    p
                                        | Срок созревания середина-конец августа. Куст сильнорослый, цветок обоеполный.
                                    p
                                        | Гроздь плотная, бесформенная, очень крупные, легко достигают массы в 3 кг (в 2020 получена гроздь 3200гр).
                                    p
                                        | Плотная мякоть, мясистый, очень выражена нота муската. Кожица не ощущается. Плодоносность почек высокая, требует нормирования, рекомендуется обломка и не допускать перегруза. Черенки укореняются крайне сложно и плохо (изучается), устойчивость к болезням высокая, показательная в дождливый сезон.
                                    p
                                        | Рекомендуем нормировать одну гроздь на плодоносящий побег.
                                    p
                                        | Морозоустойчивость до -24-25 градусов, рекомендуем укрывать на зиму.
                                    p
                                        | В общем и целом кишмиш Велес безусловно заслуживает внимания, хотя и требует особого подхода, отработки индивидуальной агротехники.
                                    p
                                        | Данный сорт рекомендуем виноградарям - любителям.

                    .product__row
                        .product__info
                            .product__info-wrap
                                h3.page__sub-heading Дополнительно к сорту
                                .product__info-descr
                                    p Не терпит перегруза, в первые 3-4 года оставлять 1-2 грозди на плодоносящем побеге, а далее 1 гроздь на побег. В таком случае можно получить грозди до 5кг! При избытке азота может растрескиваться, прекрасный опылитель для таких сортов как  Светлана, Подарок Запорожья, Кеша. По вкусовым качествам это лучший кишмиш на нашем винограднике.

                .add-info
                    h2.heading.add-info__heading Дополнительная информация
                    .add-info__text
                        p.add-info__descr= addInfo

                .info-logo__wrap
                    ul.info-logo__list
                        each post in postImgs
                            li.info-logo__item
                                picture
                                    source(srcset=post.img+'.webp' type="image/webp")
                                    img(src=post.img+'.png' alt=post.alt)


block scripts
    script(src="../js/main.js")
    script(src="../js/vendor.js")