extends ../../layouts/product-item

block variables
    - const title = "Виноград 'Гайлюне'";
    - const banner = "grapes"

block content
    - const productTitle = "'Гайлюне'";
    - const imgPath = "../img/grapes/";
    - const addInfo = "Гарантия 1 год. Саженцы двухлетние, трехлетние, закрытая корневая система, выращено в открытом грунте, обработаны. К продукции прилагается наша аннотация по уходу (обработка, посадка)."
    -
        const postImgs = [
            {
                'img': '../img/product/post-1',
                'alt': 'M&M'
            },
            {
                'img': '../img/product/post-2',
                'alt': 'Белпочта'
            },
            {
                'img': '../img/product/post-3',
                'alt': 'Европочта'
            }
        ]
    -
        const productImgs = [
            {
                'imgPath': 'gailyune/gailyune',
                'alt': "Виноград 'Гайлюне'"
            },
        ]

    section.product
        .container
            .product__wrap
                .product__inner
                    .product__row
                        .product__gallery
                            .product__gallery-main
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '.jpg' alt=productImg.alt)

                            .product__gallery-nav
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '-sm.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '-sm.jpg' alt=productImg.alt)

                        .product__info
                            h2.heading.page__heading= productTitle
                            .product__info-wrap
                                .product__info-descr
                                    p
                                        | Гайлюне – сорт винограда селекции А. Гайлюнаса, (Литва).
                                    p
                                        | Универсального направления использования, очень раннего срока созревания – 105—110 дней. В условиях г. Новочеркасска созревает в начале августа. Кусты большой силы роста. Грозди мелкие, 200-300 г, цилиндрические или цилиндроконические, средней плотности и плотные. Ягоды средние, массой 3,2-3,7 г, округлые, белые. Мякоть нежная, несколько слизистая, с очень приятным земляничным ароматом. Кожица прочная. Сорт обладает способностью к высокому сахаронакоплению. Сахаристость сока ягод в середине сентября достигает 29 г/100 см3 . Побеги вызревают очень хорошо. Плодоносных побегов 80-85 %, коэффициент плодоношения 1,3-1,7. Морозостойкость –26 –28 °С в условиях г. Мозырь, не требует укрытия.


                    .product__row
                        .product__info
                            .product__info-wrap
                                h3.page__sub-heading Дополнительно к сорту
                                .product__info-descr
                                    p Сорт относительно устойчив к грибным болезням. Урожайность высокая. Транспортабельность средняя. Пригоден для использования в свежем виде и приготовления вина, в том числе десертного. Может использоваться для беседочной культуры или навесов.

                .add-info
                    h2.heading.add-info__heading Дополнительная информация
                    .add-info__text
                        p.add-info__descr= addInfo

                .info-logo__wrap
                    ul.info-logo__list
                        each post in postImgs
                            li.info-logo__item
                                picture
                                    source(srcset=post.img+'.webp' type="image/webp")
                                    img(src=post.img+'.png' alt=post.alt)


block scripts
    script(src="../js/main.js")
    script(src="../js/vendor.js")