extends ../../layouts/product-item

block variables
    - const title = "Виноград 'Магдальский'";
    - const banner = "grapes"

block content
    - const productTitle = "Магдальский";
    - const imgPath = "../img/grapes/";
    - const addInfo = "Саженцы двухлетние, трехлетние, закрытая корневая система, выращено в открытом грунте, обработаны. К продукции прилагается наша аннотация по уходу (обработка, посадка)."
    -
        const postImgs = [
            {
                'img': '../img/product/post-1',
                'alt': 'M&M'
            },
            {
                'img': '../img/product/post-2',
                'alt': 'Белпочта'
            },
            {
                'img': '../img/product/post-3',
                'alt': 'Европочта'
            }
        ]
    -
        const productImgs = [
            {
                'imgPath': 'magdalskij/magdalskij',
                'alt': "Виноград 'Магдальский'"
            },
            {
                'imgPath': 'magdalskij/magdalskij-2',
                'alt': "Виноград 'Магдальский'"
            },
            {
                'imgPath': 'magdalskij/magdalskij-3',
                'alt': "Виноград 'Магдальский'"
            },
        ]

    section.product
        .container
            .product__wrap
                .product__inner
                    .product__row
                        .product__gallery
                            .product__gallery-main
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '.jpg' alt=productImg.alt)

                            .product__gallery-nav
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '-sm.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '-sm.jpg' alt=productImg.alt)

                        .product__info
                            h2.heading.page__heading= productTitle
                            .product__info-wrap
                                .product__info-descr
                                    p
                                        | Магдальский - столовый сорт винограда.
                                        | Сорт очень раннего срока созревания, 15 августа.
                                        | Характеризуется ранним вступлением в плодоношение, высокой и стабильной урожайностью. Масса грозди до 500-900гр, ягоды до 5-8 гр.
                                        | Грозди средней величины. Круглой формы, средней плотности, ягоды крупные, овально-яйцевидные, зеленовато-белые с золотисто-коричневым загаром и слабым восковым налетом. Мякоть сочная, тающая, кожица тонкая. Вкус приятный, гармоничный, с легким мускатным ароматом. Сахаристость сока ягод 17,5-18,5 иногда до 24г.
                                        | Магдальский  отлично себя зарекомендовал для начинающий виноградарей, в условиях г. Мозырь, не нуждается в укрытии на зиму, морозоустойчивость -26 градусов, может использоваться как арочный либо беседочный вариант. Сохранность ягод хорошая, склонен к заизюмливанию.
                    .product__row
                        .product__info
                            .product__info-wrap
                                h3.page__sub-heading Дополнительно к сорту
                                .product__info-descr
                                    p Ягода не крупная, до 1.5 см, но компенсирует непревзойденным мускатом и высоким сахаронакоплением, так же не нуждается в специальной агротехнике и уходе.
                                    p При перезревании мускат снижается. Прекрасный опылитель. В дождливые и холодные годы при цветении ухудшается опыление. Отличный вариант для начинающего виноградаря.

                .add-info
                    h2.heading.add-info__heading Дополнительная информация
                    .add-info__text
                        p.add-info__descr= addInfo

                .info-logo__wrap
                    ul.info-logo__list
                        each post in postImgs
                            li.info-logo__item
                                picture
                                    source(srcset=post.img+'.webp' type="image/webp")
                                    img(src=post.img+'.png' alt=post.alt)


block scripts
    script(src="../js/main.js")
    script(src="../js/vendor.js")