extends ../../layouts/product-item

block variables
    - const title = "Виноград 'Аладдин'";
    - const banner = "grapes"

block content
    - const productTitle = "'Аладдин'";
    - const imgPath = "../img/grapes/";
    - const addInfo = "Саженцы двухлетние, трехлетние, закрытая корневая система, выращено в открытом грунте, обработаны. К продукции прилагается наша аннотация по уходу (обработка, посадка)."
    -
        const postImgs = [
            {
                'img': '../img/product/post-1',
                'alt': 'M&M'
            },
            {
                'img': '../img/product/post-2',
                'alt': 'Белпочта'
            },
            {
                'img': '../img/product/post-3',
                'alt': 'Европочта'
            }
        ]
    -
        const productImgs = [
            {
                'imgPath': 'aladdin/aladdin',
                'alt': "Виноград 'Аладдин'"
            },
        ]

    section.product
        .container
            .product__wrap
                .product__inner
                    .product__row
                        .product__gallery
                            .product__gallery-main
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '.jpg' alt=productImg.alt)

                            .product__gallery-nav
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '-sm.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '-sm.jpg' alt=productImg.alt)

                        .product__info
                            h2.heading.page__heading= productTitle
                            .product__info-wrap
                                .product__info-descr
                                    p
                                        | (Восторг красный х Восторг мускатный)
                                        | Селекционный номер: II-13-4-1
                                        | Аладдин, новая столовая гибридная форма винограда.
                                        | Срок созревания средний, с 20 чисел августа.
                                        | Сахаристость до 20г. Цветок обоеполый. Кусты средней силы роста.
                                        | Грозди плотные, средняя масса грозди 680-750 г, средняя масса ягоды от 8-10 г,
                                        | ягоды овальные, ярко желто-розовые, на солнце ярко-розовые.
                                        | Мякоть мясистая, плотная, кожица практически не ощущается.
                                        | Вкус гармоничный, с легким мускатом. Транспортабельность очень высокая.
                                        | Очень урожайный, требует нормирования соцветиями.
                                        | Устойчивость к грибным заболеваниям высокая.
                                        | За 12 лет выращивания в г. Мозырь, подмерзания не наблюдалось. Морозоустойчивость до -26.
                    .product__row
                        .product__info
                            .product__info-wrap
                                h3.page__sub-heading Дополнительно к сорту
                                .product__info-descr
                                    p Растрескиваний, поражений осами не наблюдалось. На редкость устойчивый сорт.

                .add-info
                    h2.heading.add-info__heading Дополнительная информация
                    .add-info__text
                        p.add-info__descr= addInfo

                .info-logo__wrap
                    ul.info-logo__list
                        each post in postImgs
                            li.info-logo__item
                                picture
                                    source(srcset=post.img+'.webp' type="image/webp")
                                    img(src=post.img+'.png' alt=post.alt)


block scripts
    script(src="../js/main.js")
    script(src="../js/vendor.js")