extends ../../layouts/product-item

block variables
    - const title = "Виноград 'Юбилей Новочеркасска'";
    - const banner = "grapes"

block content
    - const productTitle = "Юбилей Новочеркасска";
    - const imgPath = "../img/grapes/";
    - const addInfo = "Гарантия 1 год. Саженцы двухлетние, трехлетние, закрытая корневая система, выращено в открытом грунте, обработаны. К продукции прилагается наша аннотация по уходу (обработка, посадка)."
    -
        const postImgs = [
            {
                'img': '../img/product/post-1',
                'alt': 'M&M'
            },
            {
                'img': '../img/product/post-2',
                'alt': 'Белпочта'
            },
            {
                'img': '../img/product/post-3',
                'alt': 'Европочта'
            }
        ]
    -
        const productImgs = [
            {
                'imgPath': 'yubilej-novocherkasska/yubilej-novocherkasska',
                'alt': "Виноград 'Юбилей Новочеркасска'"
            },
            {
                'imgPath': 'yubilej-novocherkasska/yubilej-novocherkasska-2',
                'alt': "Виноград 'Юбилей Новочеркасска'"
            },
            {
                'imgPath': 'yubilej-novocherkasska/yubilej-novocherkasska-3',
                'alt': "Виноград 'Юбилей Новочеркасска'"
            },
        ]

    section.product
        .container
            .product__wrap
                .product__inner
                    .product__row
                        .product__gallery
                            .product__gallery-main
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '.jpg' alt=productImg.alt)

                            .product__gallery-nav
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '-sm.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '-sm.jpg' alt=productImg.alt)

                        .product__info
                            h2.heading.page__heading= productTitle
                            .product__info-wrap
                                .product__info-descr
                                    p
                                        | Юбилей Новочеркасска – столовая форма винограда среднего срока созревания.
                                        br
                                        | Кусты очень большой силы роста. Цветок обоеполый.
                                        | Грозди конические, широко конические или бесформенные, средней плотности и рыхлые, средней массой 800-1200 г, отдельные грозди достигают 1800-2000г. Ягоды удлиненно-овальные с тупым кончиком, очень крупные, средней массой 13,7-15 г, от бело-розовых в тени куста до ярко-розовых на солнечной стороне, гармоничного вкуса. Мякоть мясисто-сочная, кожица средней толщины и прочности.
                                        | Сахаристость ягод — 17 г/100 мл; кислотность — 6 г/л.
                                        br
                                        | Побеги вызревают удовлетворительно и хорошо. Урожайность стабильно высокая.
                                        | Устойчивость к милдью достаточно высокая, к оидиуму средняя, устойчив к серой гнили.Морозоустойчивость -24, рекомендуем укрывать на зиму.
                                        |  Транспортабельность и товарность очень высокая. Для Юбилея Новочеркасска рекомендуется длинная обрезка, и в случае недогруза кустов основным урожаем можно делать раннюю прищипку с целью получения пасынкового урожая.
                                        | Сорт распространён на территории СНГ, ему не требуется особых почвенных и температурных условий. Прекрасно зимует как в северных, так и южных регионах Беларуси.
                                        | Входит в лучшую тройку: «Преображение», «Юлиан», «Юбилей Новочеркасска».
                                        | Большая гроздь, нежная мякоть – этот виноград заслуживает всех положительных отзывов о нем. Предлагаем вам убедиться в этом самостоятельно!

                .add-info
                    h2.heading.add-info__heading Дополнительная информация
                    .add-info__text
                        p.add-info__descr= addInfo

                .info-logo__wrap
                    ul.info-logo__list
                        each post in postImgs
                            li.info-logo__item
                                picture
                                    source(srcset=post.img+'.webp' type="image/webp")
                                    img(src=post.img+'.png' alt=post.alt)


block scripts
    script(src="../js/main.js")
    script(src="../js/vendor.js")