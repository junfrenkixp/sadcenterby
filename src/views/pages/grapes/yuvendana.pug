extends ../../layouts/product-item

block variables
    - const title = "Виноград 'Ювендана'";
    - const banner = "grapes"

block content
    - const productTitle = "'Ювендана'";
    - const imgPath = "../img/grapes/";
    - const addInfo = "Гарантия 1 год. Саженцы двухлетние, трехлетние, закрытая корневая система, выращено в открытом грунте, обработаны. К продукции прилагается наша аннотация по уходу (обработка, посадка)."
    -
        const postImgs = [
            {
                'img': '../img/product/post-1',
                'alt': 'M&M'
            },
            {
                'img': '../img/product/post-2',
                'alt': 'Белпочта'
            },
            {
                'img': '../img/product/post-3',
                'alt': 'Европочта'
            }
        ]
    -
        const productImgs = [
            {
                'imgPath': 'yuvendana/yuvendana',
                'alt': "Виноград 'Ювендана'"
            },
            {
                'imgPath': 'yuvendana/yuvendana-2',
                'alt': "Виноград 'Ювендана'"
            },
            {
                'imgPath': 'yuvendana/yuvendana-3',
                'alt': "Виноград 'Ювендана'"
            },
        ]

    section.product
        .container
            .product__wrap
                .product__inner
                    .product__row
                        .product__gallery
                            .product__gallery-main
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '.jpg' alt=productImg.alt)

                            .product__gallery-nav
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '-sm.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '-sm.jpg' alt=productImg.alt)

                        .product__info
                            h2.heading.page__heading= productTitle
                            .product__info-wrap
                                .product__info-descr
                                    p
                                        | Ювендана –  сорт винограда селекции А.Гайлюнаса, Литва.
                                        | Очень раннего срока созревания, в условиях г. Мозырь созревает в начале августа. Кусты большой силы роста. Грозди крупные, средней массой 600-800 г, конические или цилиндроконические, средней плотности, реже плотные. Ягоды крупные, овальные, средней массой 5-7 г, зелено-желтые, гармоничного вкуса, с ароматом киви.
                                        | Склонен к растрескиванию исключительно из-за избытка воды в период окрашивания ягод, контролируйте полив. Растет на любых почвах.
                                        | Мякоть мясисто-сочная, кожица плотная, 2 косточки. Сахаристость сока ягод 19-21 г/100 см3, кислотность 5-6 г/дм3. Сорт относительно устойчив к грибным болезням. Морозостойкость до -30.
                                        | Используется как арочный тип, под беседку, навес. Не подтвержен возратным заморозкам на всей территории Беларуси. Не нуждается в укрытии на третий год.

                .add-info
                    h2.heading.add-info__heading Дополнительная информация
                    .add-info__text
                        p.add-info__descr= addInfo

                .info-logo__wrap
                    ul.info-logo__list
                        each post in postImgs
                            li.info-logo__item
                                picture
                                    source(srcset=post.img+'.webp' type="image/webp")
                                    img(src=post.img+'.png' alt=post.alt)


block scripts
    script(src="../js/main.js")
    script(src="../js/vendor.js")