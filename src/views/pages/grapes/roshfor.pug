extends ../../layouts/product-item

block variables
    - const title = "Виноград 'Рошфор'";
    - const banner = "grapes"

block content
    - const productTitle = "Рошфор";
    - const imgPath = "../img/grapes/";
    - const addInfo = "Гарантия 1 год. Саженцы двухлетние, трехлетние, закрытая корневая система, выращено в открытом грунте, обработаны. К продукции прилагается наша аннотация по уходу (обработка, посадка)."
    -
        const postImgs = [
            {
                'img': '../img/product/post-1',
                'alt': 'M&M'
            },
            {
                'img': '../img/product/post-2',
                'alt': 'Белпочта'
            },
            {
                'img': '../img/product/post-3',
                'alt': 'Европочта'
            }
        ]
    -
        const productImgs = [
            {
                'imgPath': 'roshfor/roshfor',
                'alt': "Виноград 'Рошфор'"
            },
            {
                'imgPath': 'roshfor/roshfor-2',
                'alt': "Виноград 'Рошфор'"
            },
        ]

    section.product
        .container
            .product__wrap
                .product__inner
                    .product__row
                        .product__gallery
                            .product__gallery-main
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '.jpg' alt=productImg.alt)

                            .product__gallery-nav
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '-sm.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '-sm.jpg' alt=productImg.alt)

                        .product__info
                            h2.heading.page__heading= productTitle
                            .product__info-wrap
                                .product__info-descr
                                    p
                                        | Рошфор — столовая форма винограда раннего срока созревания. Большой силы роста. С обоеполым цветком. Вызревание побегов хорошее. Ягоды темно-синие, округлые, 21,5-20,5 мм, средней массой 6,2 г, грозди средние, средней массой 400-700 г. Хорошего вкуса, кожица съедается, мякоть мясистая. Сахаристость сока ягод на 10 августа 2006 года 14,8 г/100 см3, кислотность 5,6 г/дм3. Урожайность, устойчивость к грибным болезням средняя, морозу -22. По предварительным наблюдениям — устойчивость выше средней. Склонен к горошению, рекомендуем садить в паре с хорошим опылителем, например «кш 342».

                .add-info
                    h2.heading.add-info__heading Дополнительная информация
                    .add-info__text
                        p.add-info__descr= addInfo

                .info-logo__wrap
                    ul.info-logo__list
                        each post in postImgs
                            li.info-logo__item
                                picture
                                    source(srcset=post.img+'.webp' type="image/webp")
                                    img(src=post.img+'.png' alt=post.alt)


block scripts
    script(src="../js/main.js")
    script(src="../js/vendor.js")