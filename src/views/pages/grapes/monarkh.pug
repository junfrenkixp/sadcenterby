extends ../../layouts/product-item

block variables
    - const title = "Виноград 'Монарх'";
    - const banner = "grapes"

block content
    - const productTitle = "Монарх";
    - const imgPath = "../img/grapes/";
    - const addInfo = "Гарантия 1 год. Саженцы двухлетние, трехлетние, закрытая корневая система, выращено в открытом грунте, обработаны. К продукции прилагается наша аннотация по уходу (обработка, посадка)."
    -
        const postImgs = [
            {
                'img': '../img/product/post-1',
                'alt': 'M&M'
            },
            {
                'img': '../img/product/post-2',
                'alt': 'Белпочта'
            },
            {
                'img': '../img/product/post-3',
                'alt': 'Европочта'
            }
        ]
    -
        const productImgs = [
            {
                'imgPath': 'monarkh/monarkh',
                'alt': "Виноград 'Монарх'"
            }
        ]

    section.product
        .container
            .product__wrap
                .product__inner
                    .product__row
                        .product__gallery
                            .product__gallery-main
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '.jpg' alt=productImg.alt)

                            .product__gallery-nav
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '-sm.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '-sm.jpg' alt=productImg.alt)

                        .product__info
                            h2.heading.page__heading= productTitle
                            .product__info-wrap
                                .product__info-descr
                                    p
                                        | Монарх – столовая форма винограда, позднего срока созревания в условиях г. Мозыря.
                                        | Начало созревания первые числа сентября (в зависимости от года).
                                        | Цветок обоеполый.. Грозди крупные, массой от 600 до 1000  г, не склонен к горошению. Ягоды овальные, желтые, очень крупные. Размеры 36 х 26 мм, массой до 26 г. (2019год 22,4г \ 2020 год 24,1г) Мякоть плотная, кожица легко съедаемая. Вкус гармоничный, с легким мускатным ароматом. Урожай долго сохраняется на кустах без потери товарных качеств (до конца сентября) . Рекомендован к употреблению в свежем виде. Плодоносность побегов составляет от 60 до 75%, число гроздей на каждый плодоносный побег в среднем порядка 1-3. Содержание сахаров в ягоде на момент достижения съемной спелости — 18г.
                                        | Побеги вызревают хорошо.  Устойчив к грибковым заболеваниям, морозоустойчивость -24. Не склонен к растрескиванию, не поражается осами.

                    .product__row
                        .product__info
                            .product__info-wrap
                                h3.page__sub-heading Дополнительно к сорту
                                .product__info-descr
                                    p Один из самых крупноплодных сортов у нас на винограднике, по обьему ягоды и весу. При избытке азотных удобрений, стимуляторов роста, может сбрасывать бутоны до цветения. Хорошо себя зарекомендовал на суглинистых почвах.

                .add-info
                    h2.heading.add-info__heading Дополнительная информация
                    .add-info__text
                        p.add-info__descr= addInfo

                .info-logo__wrap
                    ul.info-logo__list
                        each post in postImgs
                            li.info-logo__item
                                picture
                                    source(srcset=post.img+'.webp' type="image/webp")
                                    img(src=post.img+'.png' alt=post.alt)


block scripts
    script(src="../js/main.js")
    script(src="../js/vendor.js")