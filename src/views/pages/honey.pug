extends ../layouts/default

block variables
    - const title = "Мёд | Питомник растительных культур семьи Пухальских";

block content
    - const productTitle = "Мёд";
    - const imgPath = "./img/honey/";
    -
        const postImgs = [
            {
                'img': './img/product/post-1',
                'alt': 'M&M'
            },
            {
                'img': './img/product/post-2',
                'alt': 'Белпочта'
            },
            {
                'img': './img/product/post-3',
                'alt': 'Европочта'
            }
        ]
    -
        const productImgs = [
            {
                'imgPath': 'honey',
                'alt': "Мёд"
            },
            {
                'imgPath': 'honey-2',
                'alt': "Мёд"
            },
            {
                'imgPath': 'honey-3',
                'alt': "Мёд"
            },
            {
                'imgPath': 'honey-4',
                'alt': "Мёд"
            },
            {
                'imgPath': 'honey-5',
                'alt': "Мёд"
            },
            {
                'imgPath': 'honey-6',
                'alt': "Мёд"
            },
            {
                'imgPath': 'honey-7',
                'alt': "Мёд"
            },
            {
                'imgPath': 'honey-8',
                'alt': "Мёд"
            },
            {
                'imgPath': 'honey-9',
                'alt': "Мёд"
            },
        ]

    include ../../blocks/components/banner/banner
    +banner("honey")

    section.product
        .container
            .product__wrap
                .product__inner
                    .product__row
                        .product__gallery
                            .product__gallery-main
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '.jpg' alt=productImg.alt)

                            .product__gallery-nav
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '-sm.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '-sm.jpg' alt=productImg.alt)

                        .product__info
                            h2.heading.page__heading= productTitle
                            .product__info-wrap
                                .product__info-descr
                                    p
                                        | Собственная пасека в экологически чистом месте. Опыт ведения пчеловодства 30 лет. Предлагаем мед различных сборов: разнотравье, луговой, лесной, гречишковый, рапсовый, малиновый сбор с крушиной.
                                    p
                                        strong
                                            | Фасовка 0,5л/1,0л.
                                    p
                                        | Наш мед не подвергается подогреву и сохраняет все свои полезные свойства. Мы не добавляем консервантов и лекарств для пчел в период медоноса, так же сахарный сироп. Только природные условия и соблюдение всех технологических процессов, делает наш мед лучшим на рынке.

                .info-logo__wrap
                    ul.info-logo__list
                        each post in postImgs
                            li.info-logo__item
                                picture
                                    source(srcset=post.img+'.webp' type="image/webp")
                                    img(src=post.img+'.png' alt=post.alt)


block scripts
    script(src="./js/main.js")
    script(src="./js/vendor.js")