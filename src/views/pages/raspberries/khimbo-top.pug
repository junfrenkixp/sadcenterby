extends ../../layouts/product-item

block variables
    - const title = "Малина 'Химбо Топ'";
    - const banner = "raspberries"

block content
    - const productTitle = "Химбо Топ";
    - const imgPath = "../img/raspberries/";
    - const addInfo = "Саженцы двухлетние, трехлетние, закрытая корневая система, выращено в открытом грунте, обработаны. К продукции прилагается наша аннотация по уходу (обработка, посадка)."
    -
        const postImgs = [
            {
                'img': '../img/product/post-1',
                'alt': 'M&M'
            },
            {
                'img': '../img/product/post-2',
                'alt': 'Белпочта'
            },
            {
                'img': '../img/product/post-3',
                'alt': 'Европочта'
            }
        ]
    -
        const productImgs = [
            {
                'imgPath': 'khimbo-top/khimbo-top',
                'alt': "Малина 'Химбо Топ'"
            },
            {
                'imgPath': 'khimbo-top/khimbo-top-2',
                'alt': "Малина 'Химбо Топ'"
            },
        ]

    section.product
        .container
            .product__wrap
                .product__inner
                    .product__row
                        .product__gallery
                            .product__gallery-main
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '.jpg' alt=productImg.alt)

                            .product__gallery-nav
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '-sm.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '-sm.jpg' alt=productImg.alt)

                        .product__info
                            h2.heading.page__heading= productTitle
                            .product__info-wrap
                                .product__info-descr
                                    p
                                        | Ягоды привлекательно ярко-красного цвета, не темнеющих после созревания, обращают на себя внимание правильной точеной формой, имеют достаточно плотную мякоть при достаточной сочности, легкий отрыв. После созревания могут не терять вида, не осыпаться до 3-х дней, как сообщают садоводы. Высота побегов до 1.8 м – 2.2м. Побегообразовательная способность достаточная – дает 5-7 побегов замещения в первый год, до 10-12 в последующие. Высокорослый, с длинными многочисленными плодовыми веточками, расположенными практически по всей высоте. Плодовые веточки длинные, до 70-80 см.

                .add-info
                    h2.heading.add-info__heading Дополнительная информация
                    .add-info__text
                        p.add-info__descr= addInfo

                .info-logo__wrap
                    ul.info-logo__list
                        each post in postImgs
                            li.info-logo__item
                                picture
                                    source(srcset=post.img+'.webp' type="image/webp")
                                    img(src=post.img+'.png' alt=post.alt)


block scripts
    script(src="../js/main.js")
    script(src="../js/vendor.js")