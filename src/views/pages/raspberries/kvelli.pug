extends ../../layouts/product-item

block variables
    - const title = "Малина 'Квелли'";
    - const banner = "raspberries"

block content
    - const productTitle = "'Квелли'";
    - const imgPath = "../img/raspberries/";
    - const addInfo = "Саженцы двухлетние, трехлетние, закрытая корневая система, выращено в открытом грунте, обработаны. К продукции прилагается наша аннотация по уходу (обработка, посадка)."
    -
        const postImgs = [
            {
                'img': '../img/product/post-1',
                'alt': 'M&M'
            },
            {
                'img': '../img/product/post-2',
                'alt': 'Белпочта'
            },
            {
                'img': '../img/product/post-3',
                'alt': 'Европочта'
            }
        ]
    -
        const productImgs = [
            {
                'imgPath': 'kvelli/kvelli',
                'alt': "Малина 'Квелли'"
            },
            {
                'imgPath': 'kvelli/kvelli-2',
                'alt': "Малина 'Квелли'"
            },
        ]

    section.product
        .container
            .product__wrap
                .product__inner
                    .product__row
                        .product__gallery
                            .product__gallery-main
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '.jpg' alt=productImg.alt)

                            .product__gallery-nav
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '-sm.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '-sm.jpg' alt=productImg.alt)

                        .product__info
                            h2.heading.page__heading= productTitle
                            .product__info-wrap
                                .product__info-descr
                                    p
                                        | Квелли (ремонтантный сорт)
                                        br
                                        | Куст высокорослый, хорошо разветвленный, среднераскидсистый, зона плодоношения занимает большую часть стебля. Побеги покрыты светло-зелеными короткими шипами. Требуют подвязки на шпалеру. Плоды эффектные — форма тяготеет к округлой, светлые, твердые, транспортабельные и пригодные к длительному хранению, светло-красного цвета, с хорошо сцепленной мелкой одномерной костянкой. После созревания длительное время не осыпаются, после сбора не темнеют. Вес в среднем 7-8г. Лежкость до 10 дней без потери товарных качеств, при условии сбора в технической зрелости.
                                        | Сорт зарекомендовал себя  на протяжении 8 лет, нетребователен в уходе и почве.
                                        br
                                        | Станет находкой для дачника!

                .add-info
                    h2.heading.add-info__heading Дополнительная информация
                    .add-info__text
                        p.add-info__descr= addInfo

                .info-logo__wrap
                    ul.info-logo__list
                        each post in postImgs
                            li.info-logo__item
                                picture
                                    source(srcset=post.img+'.webp' type="image/webp")
                                    img(src=post.img+'.png' alt=post.alt)


block scripts
    script(src="../js/main.js")
    script(src="../js/vendor.js")