extends ../../layouts/product-item

block variables
    - const title = "Голубика 'Бригитта Блю'";
    - const banner = "blueberry"

block content
    - const productTitle = "'Бригитта Блю'";
    - const imgPath = "../img/blueberry/";
    - const addInfo = "Саженцы двухлетние, трехлетние, закрытая корневая система, выращено в открытом грунте, обработаны. К продукции прилагается наша аннотация по уходу (обработка, посадка)."
    -
        const postImgs = [
            {
                'img': '../img/product/post-1',
                'alt': 'M&M'
            },
            {
                'img': '../img/product/post-2',
                'alt': 'Белпочта'
            },
            {
                'img': '../img/product/post-3',
                'alt': 'Европочта'
            }
        ]
    -
        const productImgs = [
            {
                'imgPath': 'brigitta-blue/brigitta-blue',
                'alt': "Голубика 'Бригитта Блю'"
            },
            {
                'imgPath': 'brigitta-blue/brigitta-blue-2',
                'alt': "Голубика 'Бригитта Блю'"
            }
        ]

    section.product
        .container
            .product__wrap
                .product__inner
                    .product__row
                        .product__gallery
                            .product__gallery-main
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '.jpg' alt=productImg.alt)

                            .product__gallery-nav
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '-sm.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '-sm.jpg' alt=productImg.alt)

                        .product__info
                            h2.heading.page__heading= productTitle
                            .product__info-wrap
                                .product__info-descr
                                    p
                                        | «Бригитта Блю» (Brigitta Blue) средне-поздний сорт.
                                        | Прямостоячий куст, средне раскидистый.
                                        | Срок созревания – середина, конец августа
                                        | Высотой 1,8—2 метра.
                                        |  Урожай регулярный, 4—6 килограммов с куста.
                                        | Ягоды высокого качества, светло-голубые, средней величины 15-17мм, очень прочные, гладкие, твёрдые и хрустящие.
                                        | Ягоды созревают поэтапно и равномерно.
                                        | Данный сорт склонен к подмерзанию в период возвратных заморозков весной.
                                        |  Нуждается в более высоких участках и в ограничении количества азотосодержащих удобрений для входа в период зимнего покоя и достижения состояния полной морозоустойчивости (одревесневания).
                                        | Данный сорт считается  неплохим конкурентом «Авроры», «Чандлера».

                .add-info
                    h2.heading.add-info__heading Дополнительная информация
                    .add-info__text
                        p.add-info__descr= addInfo

                .info-logo__wrap
                    ul.info-logo__list
                        each post in postImgs
                            li.info-logo__item
                                picture
                                    source(srcset=post.img+'.webp' type="image/webp")
                                    img(src=post.img+'.png' alt=post.alt)


block scripts
    script(src="../js/main.js")
    script(src="../js/vendor.js")