extends ../../layouts/product-item

block variables
    - const title = "Голубика 'Аврора'";
    - const banner = "blueberry"

block content
    - const productTitle = "'Аврора'";
    - const imgPath = "../img/blueberry/";
    - const addInfo = "Саженцы двухлетние, трехлетние, закрытая корневая система, выращено в открытом грунте, обработаны. К продукции прилагается наша аннотация по уходу (обработка, посадка)."
    -
        const postImgs = [
            {
                'img': '../img/product/post-1',
                'alt': 'M&M'
            },
            {
                'img': '../img/product/post-2',
                'alt': 'Белпочта'
            },
            {
                'img': '../img/product/post-3',
                'alt': 'Европочта'
            }
        ]
    -
        const productImgs = [
            {
                'imgPath': 'aurora/aurora',
                'alt': "Голубика 'Аврора'"
            }
        ]

    section.product
        .container
            .product__wrap
                .product__inner
                    .product__row
                        .product__gallery
                            .product__gallery-main
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '.jpg' alt=productImg.alt)

                            .product__gallery-nav
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '-sm.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '-sm.jpg' alt=productImg.alt)

                        .product__info
                            h2.heading.page__heading= productTitle
                            .product__info-wrap
                                .product__info-descr
                                    p
                                        | Сорт голубики «Аврора» (Aurora) один из самых поздних сортов голубики
                                        | Куст прямостоячий, раскидистый.
                                        | Срок созревания – середина, конец августа.
                                        | Высота 1,5-1,6м,шириной до 1.2м. Аврора самоопыляющийся сорт, однако при перекрестном опылении, качество и размер ягод увеличиваются. Урожай очень хороший, регулярный 4,5-8,5 кг. Плоды светло-голубые, рубчик маленький.
                                        | Диаметр ягод 14 – 18 мм, крупные, средняя масса 1,5-1,7г. Ягода не осыпается. Ягода полноценно вызревает в условиях г. Мозыря. Сорт десертный, подходит под заморозку, либо к употреблению в свежем виде. Отлично подходит для изготовления джемов, желе, йогуртов. Отличительная черта данного сорта: обьем ягоды, повышенная устойчивость к заморозкам и устойчивость к антракнозу и монилиозу.
                                        | Подмерзаний в аг.Прудок, аг.Малые Зимовищи, аг. Каменка не наблюдалось (территории возвратных заморозков, Мозырский р-н).

                .add-info
                    h2.heading.add-info__heading Дополнительная информация
                    .add-info__text
                        p.add-info__descr= addInfo

                .info-logo__wrap
                    ul.info-logo__list
                        each post in postImgs
                            li.info-logo__item
                                picture
                                    source(srcset=post.img+'.webp' type="image/webp")
                                    img(src=post.img+'.png' alt=post.alt)


block scripts
    script(src="../js/main.js")
    script(src="../js/vendor.js")