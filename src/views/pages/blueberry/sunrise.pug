extends ../../layouts/product-item

block variables
    - const title = "Голубика 'Санрайз'";
    - const banner = "blueberry"

block content
    - const productTitle = "Санрайз";
    - const imgPath = "../img/blueberry/";
    - const addInfo = "Саженцы двухлетние, трехлетние, закрытая корневая система, выращено в открытом грунте, обработаны. К продукции прилагается наша аннотация по уходу (обработка, посадка)."
    -
        const postImgs = [
            {
                'img': '../img/product/post-1',
                'alt': 'M&M'
            },
            {
                'img': '../img/product/post-2',
                'alt': 'Белпочта'
            },
            {
                'img': '../img/product/post-3',
                'alt': 'Европочта'
            }
        ]
    -
        const productImgs = [
            {
                'imgPath': 'sunrise/sunrise',
                'alt': "Голубика 'Санрайз'"
            },
            {
                'imgPath': 'sunrise/sunrise-2',
                'alt': "Голубика 'Санрайз'"
            },
        ]

    section.product
        .container
            .product__wrap
                .product__inner
                    .product__row
                        .product__gallery
                            .product__gallery-main
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '.jpg' alt=productImg.alt)

                            .product__gallery-nav
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '-sm.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '-sm.jpg' alt=productImg.alt)

                        .product__info
                            h2.heading.page__heading= productTitle
                            .product__info-wrap
                                .product__info-descr
                                    p
                                        | «Санрайз» (Sunrise) - ранне-среднего срока созревания.
                                        | Канадская селекция.
                                        | Срок созревания с 20-25х чисел июля. Высота куста 1,6-1,8 метра, прямостоячий, быстрорастущий.
                                        | Урожайность регулярная, 4-6 кг с куста. На 7-8й год, можно получить до 8 кг.
                                        | Ягоды крупные и очень крупные, до 20 мм.
                                        | "Санрайз" зарекомендовал себя в регионах с повышенными заморозками. Устойчив к возвратным морозам.
                                        | Ягоды светло-голубого цвета, выровненные по величине, сплющенные, с интенсивным восковым налетом, плотные.
                                        | Предпочитает расти на открытых, обязательно безветренных, пространствах.

                .add-info
                    h2.heading.add-info__heading Дополнительная информация
                    .add-info__text
                        p.add-info__descr= addInfo

                .info-logo__wrap
                    ul.info-logo__list
                        each post in postImgs
                            li.info-logo__item
                                picture
                                    source(srcset=post.img+'.webp' type="image/webp")
                                    img(src=post.img+'.png' alt=post.alt)


block scripts
    script(src="../js/main.js")
    script(src="../js/vendor.js")