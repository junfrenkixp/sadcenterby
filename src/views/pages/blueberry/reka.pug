extends ../../layouts/product-item

block variables
    - const title = "Голубика 'Река'";
    - const banner = "blueberry"

block content
    - const productTitle = "Река";
    - const imgPath = "../img/blueberry/";
    - const addInfo = "Саженцы двухлетние, трехлетние, закрытая корневая система, выращено в открытом грунте, обработаны. К продукции прилагается наша аннотация по уходу (обработка, посадка)."
    -
        const postImgs = [
            {
                'img': '../img/product/post-1',
                'alt': 'M&M'
            },
            {
                'img': '../img/product/post-2',
                'alt': 'Белпочта'
            },
            {
                'img': '../img/product/post-3',
                'alt': 'Европочта'
            }
        ]
    -
        const productImgs = [
            {
                'imgPath': 'reka/reka',
                'alt': "Голубика 'Река'"
            },
            {
                'imgPath': 'reka/reka-2',
                'alt': "Голубика 'Река'"
            },
        ]

    section.product
        .container
            .product__wrap
                .product__inner
                    .product__row
                        .product__gallery
                            .product__gallery-main
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '.jpg' alt=productImg.alt)

                            .product__gallery-nav
                                each productImg in productImgs
                                    picture
                                        source(srcset=imgPath + productImg.imgPath + '-sm.webp' type="image/webp")
                                        img(src=imgPath + productImg.imgPath + '-sm.jpg' alt=productImg.alt)

                        .product__info
                            h2.heading.page__heading= productTitle
                            .product__info-wrap
                                .product__info-descr
                                    p
                                        | «Река» (Reka) –  раннего срока созревания.
                                        | Время созревания ягод – 20-22 числа июля.
                                        | Прямостоячий куст.
                                        | Высота 1,7-2м, мощно развиты вертикальные побеги.
                                        | Урожай регулярный, высокий.
                                        | Нагрузка на куст 8-10 кг.
                                        | Масса ягоды, 1,8-2,2г, 14-16мм в диаметре, плоды средней величины.
                                        | Ягоды имеют интенсивный, голубой цвет, хороший вкус и приятный аромат.
                                        | После созревании ягоды долго не опадают. Рекомендуется к употреблению в свежем виде.
                                        | Требуется профилактическая обрезка куста на 3-4 год, для повышения кпд.
                                        | Куст имеет хороший декоративный вид, устойчив к ряду заболеваний.
                                        | Рекомендуем ограничивать азотосодержащие удобрения.

                .add-info
                    h2.heading.add-info__heading Дополнительная информация
                    .add-info__text
                        p.add-info__descr= addInfo

                .info-logo__wrap
                    ul.info-logo__list
                        each post in postImgs
                            li.info-logo__item
                                picture
                                    source(srcset=post.img+'.webp' type="image/webp")
                                    img(src=post.img+'.png' alt=post.alt)


block scripts
    script(src="../js/main.js")
    script(src="../js/vendor.js")